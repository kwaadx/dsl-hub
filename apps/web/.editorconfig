root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs}]
quote_type = single

# Vue files
[*.vue]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_size = 2

# CSS, SCSS, LESS files
[*.{css,scss,less}]
indent_size = 2
