# ===== GENERAL =====
LOG_LEVEL=info

# ===== DATABASE (Postgres) =====
DB_HOST=db
DB_PORT=5432
DB_NAME=dsl_hub
DB_USER=postgres
DB_PASSWORD=postgres

# ===== BACKEND (FastAPI API) =====
API_HOST=0.0.0.0
API_PORT=8000
APP_VERSION=0.1.0

#API_AUTH_TOKEN=

API_INIT_SCHEMA_ON_START=1
API_INIT_SCHEMA_PATH=v1.0.0.json
