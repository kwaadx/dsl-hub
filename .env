API_MAX_JSON_SIZE=1048576
API_IDEMPOTENCY_TTL_SEC=300
API_IDEMPOTENCY_CACHE_MAX=1000
API_LLM_TIMEOUT=30
API_LLM_RETRIES=3
API_CORS_ORIGINS=*

API_OPENAI_API_KEY=
API_OPENAI_MODEL=gpt-4o-mini
API_OPENAI_BASE_URL=https://api.openai.com/

# ===== FRONTEND (Vue + Vite) =====
WEB_HOST=0.0.0.0
WEB_PORT=3000
VITE_API_BASE_URL="http://localhost:${API_PORT}"
